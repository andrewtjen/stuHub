extends layout

block content
    h1 #{title}

    br

    form(method='POST', action='/search')
      input(type="text", name="nameSearch", placeholder="Search..")
      input.btn.btn-primary(type='submit',value='search')

    ul

        each event, i in events
            li
                a(href="/event/"+event._id)= event.name
            
                br
                form(method='POST', action='/event/join/' + event.id)
                    input(type='hidden', name="id", value=event.id)
                    input.btn.btn-primary(type='submit',value='Join the Event')

                