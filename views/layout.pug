doctype html
html
  head
    title StudentHub
  body
    if user
      h1 LOGGED IN
    else
      h1 LOGGED OUT

    br
    form(method='GET', action="/")
      input(type="submit" value="Home")
    if user
      br
      form(method='GET', action="/event/add")
        input(type="submit" value="Add an Event")
      br
      formmethod='GET', action="/user/logout")
        input(type="submit" value="Logout")
      br
      form(method='GET', action='/user/history/joined/')
        input(type="submit" value="Joined Events")
      br

    else
      br
      form(method='GET', action="/user/login")
        input(type="submit" value="Log In")
      br
      form(method='GET', action="/user/register")
        input(type="submit" value="Sign Up")

    
    if errors
      each error, i in errors
        div(class="alert alert-danger") || #{error.msg} ||


    form(method='POST', action='/event/join/' + event.id)
      input(type="text" placeholder="Search.." name="search")


    block content
    
    br
    hr
    footer
