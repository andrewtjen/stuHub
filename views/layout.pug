doctype html
html
  head
    title Home
    style
      include ../public/css/style.css
    link(href='https://fonts.googleapis.com/css2?family=Spartan&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    script
      include sidebar.js
      include modal1.js
  body
    if user
      #overlay
      #modal.modal
        .modal-header
          .title Add Event
          button.close-button(onclick = "closeModal()") &times;
        .modal-body
          form(method='POST', action='/event/add')
            #form-group
              label Name:
              input.form-control(name='name', type='text')
            br
            #form-group
              label Category:
              select(name='category')
                option(value='') Please select category
                option(value='sports') Sports
                option(value='studies') Studies
                option(value='leisure') Leisure
                option(value='club activity') Club Activity
            br
            #form-group
              label Location:
              input(name='location', type='text')
            br
            #form-group
              label Date:
              input(name='date', type='date')
            br
            #form-group
              label Time:
              input(name='time',type="time")
            br
            #form-group
              label Description:
              textarea.form-control(name='description', type='text')
            br
            #form-group
              label(for='capacity') Capacity:
              input(type='number', name='capacity', min='1')
            br
            input.btn.btn-primary(type='submit',value='Submit')
      #mySidenav.sidebar
        a.closebtn(href='javascript:void(0)', onclick='closeNav()') &times;
        a(href='javascript:void(0)' , onclick = 'openModal(),closeNav()') Add Event

        a(href='/user/history/joined/') Joined Events
        a(href='/user/history/created/') Created Events
        a(href='#') Account
        a(href='#') About
        a(href='#') Settings
      #main
        .header
          span(onclick='openNav()')
            i.material-icons.listButton menu
          a(href='/')
            img.logo(src='../../../img/stuhub-logo-final3.png', alt='logo')
            a.headerButton.headerDark(href='/user/logout') Log Out
    else
      #mySidenav.sidebar
        a.closebtn(href='javascript:void(0)', onclick='closeNav()') &times;
        a(href='/event/add') Add Event
        a(href='#') Account
        a(href='#') About
        a(href='#') Settings
      #main
        .header
          span(onclick='openNav()')
            i.material-icons.listButton menu
          a(href='/')
            img.logo(src='img/stuhub-logo-final3.png', alt='logo')
            a.headerButton.headerLight(href='/user/login') Log In
            a.headerButton.headerDark(href='/user/register') Sign Up
    form.searchBar(action='/search' method='GET')
      .searchBarElement
        input.search(type='text' name='search' placeholder='Event search...')
        button.searchButton(type='submit')
          i.material-icons search
      .searchBarElement
        select.filter.search(name='filterBy')
          option(value='') Filter By
          option(value='sports') Sports
          option(value='studies') Studies
          option(value='leisure') Leisure
          option(value='club activity') Club Activity
      .searchBarElement
        select.filter.search(name='sortBy')
          option(value='') Sort By
          option(value='happeningsoon') Happening Soon
          option(value='happeninglatest') Happening latest
          option(value='newestcreated') Newest Created
          option(value= 'latestcreated') Latest Created
          //option(value= 'capacity') Capacity

    block content



