block content
    h1 Reset Password
    form(method='POST', action='/user/confirmedpasswordreset/' + token_id)
        #form-group
            label Password:
            input.form-control(name='password',type='text')
        #form-group
            label Confirm Password:
            input.form-control(name='confirm_password',type='password')
        br
        input.btn.btn-primary(type='submit',value='Submit')